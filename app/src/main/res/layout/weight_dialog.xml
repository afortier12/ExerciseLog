<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weight_dialog_layout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/colorDialog"
    android:padding="@dimen/activity_margin"
    android:orientation="vertical">

    <include
        android:id="@+id/weight1"
        layout="@layout/weight_dialog_common"/>

    <include
        android:id="@+id/weight2"
        layout="@layout/weight_dialog_common"/>

    <include
        android:id="@+id/weight3"
        layout="@layout/weight_dialog_common"/>

    <include
        android:id="@+id/weight4"
        layout="@layout/weight_dialog_common"/>

    <include
        android:id="@+id/weight5"
        layout="@layout/weight_dialog_common"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/total_value"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="@string/total_weight"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="start"/>

        <TextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_centerHorizontal="true"
            android:text="0LBS"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</LinearLayout>